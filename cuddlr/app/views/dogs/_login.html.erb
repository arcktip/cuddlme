<% unless @dog.errors.none? %>
  <% @dog.errors.full_messages.each do |dog| %>
    <%= dog %>
  <% end %>
<% end %>

<%= form_for @dog do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit %>
<% end %>